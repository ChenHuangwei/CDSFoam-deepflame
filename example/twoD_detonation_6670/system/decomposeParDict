FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      decomposeParDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

numberOfSubdomains  80;

method          simple;

simpleCoeffs
{
    n               (8 10 1);
    delta           0;
}

constraints
{
    dfRefinementHistory
    {
        //- Decompose cells such that all cell originating from single cell
        //  end up on same processor
        type    dfRefinementHistory;
    }
}

